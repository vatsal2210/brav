<main class="auth-main" ng-controller="authCtrl" >
  <div class="auth-block">
    <h1>Sign in to Brav (beta): {{sample}}</h1>
    <a href="/reg" >New to Brav ? Sign up! </a>

    <form class="form-horizontal" ng-show="signinmode">
      <div class="form-group">
        <label for="inputEmail3" >Email</label>

        <div class="col-sm-10">
          <input type="email" ng-model="user.email" id="inputEmail3" placeholder="Email">
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" >Password</label>

        <div class="col-sm-10">
          <input type="password" ng-model="user.pw" id="inputPassword3" placeholder="Password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" ng-click="signin(user)" >Sign in</button>
          <!--<a href class="forgot-pass">Forgot password?</a>-->
        </div>
      </div>
    </form>
</div>

</main>
