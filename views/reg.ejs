
<div ng-controller="authCtrl">
<main class="auth-main" ng-app="bravAuth" ng-controller="regAuthCtrl">

  <div class="auth-block" id="b1" ng-show="showWhich==0">
    <h1>Sign up to Brav (Beta) : {{sample}}</h1>
    <center><p>Enter the following details and we will send you a verification code(OTP) on your email to verify</p></center>
    <a href="/login" >Already have a Brav account? Sign in!</a>


    <form class="form-horizontal"  >
      <div class="form-group">
        <label for="inputName3" class="col-sm-2 control-label">Organization </label>

        <div class="col-sm-10">
          <input type="text" ng-model="user.name" class="form-control" id="inputName3" placeholder="Name of the organization">
        </div>
      </div>
      <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label">Email</label>

        <div class="col-sm-10">
          <input type="text" ng-model="user.email" class="form-control" id="inputEmail3" placeholder="Email">
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-2 control-label">Password</label>

        <div class="col-sm-10">
          <input type="password" ng-model="user.pw" class="form-control" id="inputPassword3" placeholder="Password">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default btn-auth" ng-click="submit1()">Verify</button>
        </div>
      </div>
    </form>
  </div>

  <div class="auth-block" id="b2"  ng-show="showWhich==1"  >
    <h1>Sign up to Brav (Beta)</h1>
    <a href="/login" >Already have a Brav account? Sign in!</a>

    <form class="form-horizontal">
      <div class="form-group">
        <label for="inputName3" class="col-sm-2 control-label">Verification Code </label>

        <div class="col-sm-10">
          <input type="text" class="form-control" id="otp" ng-model="user.otp" placeholder="OTP that you recieved via email">
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default btn-auth" ng-click="submit2()">Sign Up!</button>
          <br>
          <button class="btn btn-default btn-auth" ng-click="submit0()">back</button>
        </div>
      </div>
    </form>
  </div>


</main>
</div>

